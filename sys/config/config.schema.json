{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "System Evolution Config",
  "type": "object",
  "required": [
    "feature_flags",
    "paths",
    "models",
    "scheduler",
    "evolution",
    "knowledge",
    "system2"
  ],
  "properties": {
    "feature_flags": {
      "type": "object",
      "required": [
        "system_evolution_enabled",
        "semantic_graph_enabled",
        "renderer_enabled",
        "scheduler_enabled",
        "maintenance_enabled",
        "breath_module_enabled"
      ],
      "properties": {
        "system_evolution_enabled": { "type": "boolean" },
        "semantic_graph_enabled": { "type": "boolean" },
        "renderer_enabled": { "type": "boolean" },
        "scheduler_enabled": { "type": "boolean" },
        "maintenance_enabled": { "type": "boolean" },
        "breath_module_enabled": { "type": "boolean" }
      }
    },
    "paths": {
      "type": "object",
      "required": ["root", "state_dir", "templates_dir", "log_dir"],
      "properties": {
        "root": { "type": "string" },
        "state_dir": { "type": "string" },
        "templates_dir": { "type": "string" },
        "log_dir": { "type": "string" }
      }
    },
    "models": {
      "type": "object",
      "required": ["default"],
      "properties": {
        "default": { "type": "string" }
      }
    },
    "scheduler": {
      "type": "object",
      "required": ["tick_seconds", "max_concurrency"],
      "properties": {
        "tick_seconds": { "type": "number" },
        "max_concurrency": { "type": "number" }
      }
    },
    "evolution": {
      "type": "object",
      "required": ["mode", "enable_hot_reload"],
      "properties": {
        "mode": { "type": "string" },
        "enable_hot_reload": { "type": "boolean" }
      }
    },
    "knowledge": {
      "type": "object",
      "required": ["breath"],
      "properties": {
        "breath": {
          "type": "object",
          "required": ["evidence_manifest"],
          "properties": {
            "evidence_manifest": { "type": "string" }
          }
        }
      }
    },
    "system2": {
      "type": "object",
      "required": [
        "feature_enabled",
        "workspace_path",
        "identity_path",
        "policy_version",
        "tool_allowlist_path",
        "tool_allowlist_hash",
        "federation_enabled",
        "federation_external_root",
        "litellm_endpoint",
        "use_litellm_proxy",
        "envelope_signing_key_env",
        "event_log_path",
        "sync_cursor_path",
        "tool_plane_enabled"
      ],
      "properties": {
        "feature_enabled": { "type": "boolean" },
        "workspace_path": { "type": "string" },
        "identity_path": { "type": "string" },
        "policy_version": { "type": "string" },
        "tool_allowlist_path": { "type": "string" },
        "tool_allowlist_hash": { "type": "string" },
        "federation_enabled": { "type": "boolean" },
        "federation_external_root": { "type": "string" },
        "litellm_endpoint": { "type": "string" },
        "use_litellm_proxy": { "type": "boolean" },
        "envelope_signing_key_env": { "type": "string" },
        "event_log_path": { "type": "string" },
        "sync_cursor_path": { "type": "string" },
        "tool_plane_enabled": { "type": "boolean" }
      }
    }
  }
}
