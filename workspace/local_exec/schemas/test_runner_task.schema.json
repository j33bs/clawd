{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://openclaw.local/schemas/local_exec/test_runner_task.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "commands",
    "timeout_sec"
  ],
  "properties": {
    "commands": {
      "type": "array",
      "minItems": 1,
      "maxItems": 32,
      "items": {
        "type": "array",
        "minItems": 1,
        "maxItems": 64,
        "items": {
          "type": "string",
          "maxLength": 256
        }
      }
    },
    "timeout_sec": {
      "type": "integer",
      "minimum": 1,
      "maximum": 3600
    },
    "cwd": {
      "type": "string",
      "maxLength": 512
    },
    "env_allow": {
      "type": "array",
      "maxItems": 64,
      "items": {
        "type": "string",
        "maxLength": 128
      }
    }
  }
}
