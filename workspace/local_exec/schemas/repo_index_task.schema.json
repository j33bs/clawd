{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://openclaw.local/schemas/local_exec/repo_index_task.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "include_globs",
    "max_files",
    "max_file_bytes"
  ],
  "properties": {
    "include_globs": {
      "type": "array",
      "minItems": 1,
      "maxItems": 16,
      "items": {
        "type": "string",
        "maxLength": 128
      }
    },
    "exclude_globs": {
      "type": "array",
      "maxItems": 16,
      "items": {
        "type": "string",
        "maxLength": 128
      }
    },
    "max_files": {
      "type": "integer",
      "minimum": 1,
      "maximum": 50000
    },
    "max_file_bytes": {
      "type": "integer",
      "minimum": 128,
      "maximum": 1048576
    },
    "keywords": {
      "type": "array",
      "maxItems": 32,
      "items": {
        "type": "string",
        "maxLength": 64
      }
    }
  }
}
