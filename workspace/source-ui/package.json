{
  "name": "source-ui",
  "version": "1.0.0",
  "description": "Source UI - OpenClaw System Management Dashboard",
  "main": "main.js",
  "scripts": {
    "start": "electron . --no-sandbox --disable-gpu",
    "build": "electron-builder --linux deb"
  },
  "author": "OpenClaw",
  "license": "MIT",
  "dependencies": {
    "electron": "^28.0.0"
  },
  "devDependencies": {
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "ai.openclaw.sourceui",
    "productName": "Source UI",
    "linux": {
      "target": "deb",
      "category": "Utility"
    },
    "files": [
      "main.js",
      "preload.js",
      "icon.png"
    ]
  }
}
