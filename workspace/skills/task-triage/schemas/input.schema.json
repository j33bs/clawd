{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "workspace/skills/task-triage/schemas/input.schema.json",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "task": { "type": "string", "minLength": 1 },
    "context": { "type": "string" },
    "local": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "tier_suggestion": { "type": "string", "enum": ["LOCAL", "REMOTE", "HUMAN"] },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "rationale": { "type": "string" }
      }
    },
    "last_local_error": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": { "type": "string" },
        "message": { "type": "string" }
      }
    }
  },
  "required": ["task"]
}
