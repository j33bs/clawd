{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "workspace/skills/task-triage/schemas/input.schema.json",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "task": { "type": "string", "minLength": 1 },
    "context": { "type": "string" },
    "source": { "type": "string" },
    "last_local_error": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": { "type": "string" },
        "message": { "type": "string" }
      }
    },
    "sentinel": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "available": { "type": "boolean" },
        "max_excerpt_chars": { "type": "integer", "minimum": 1 }
      }
    },
    "excerpt": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "task_excerpt": { "type": "string" },
        "context_excerpt": { "type": "string" }
      }
    },
    "local_sentinel_result": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "tier_suggestion": { "type": "string", "enum": ["LOCAL", "REMOTE", "HUMAN"] },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "rationale": { "type": "string" },
        "labels": { "type": "array", "items": { "type": "string" } }
      }
    },
    "local": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "tier_suggestion": { "type": "string", "enum": ["LOCAL", "REMOTE", "HUMAN"] },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "rationale": { "type": "string" }
      }
    }
  },
  "required": ["task"]
}
