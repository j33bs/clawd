{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "workspace/skills/task-triage/schemas/output.schema.json",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "tier": { "type": "string", "enum": ["LOCAL", "REMOTE", "HUMAN"] },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "rationale": { "type": "string" },
    "request_for_chatgpt": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "task": { "type": "string" },
        "context": { "type": "string" },
        "why": { "type": "string" },
        "expected_output": { "type": "string" }
      },
      "required": ["task", "context", "why", "expected_output"]
    }
  },
  "required": ["tier", "confidence", "rationale"]
}
