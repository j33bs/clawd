{
  "confidence_threshold_remote": 0.7,
  "confidence_threshold_human": 0.5,
  "sentinel": {
    "min_confidence": 0.7
  },
  "prefilter": {
    "enabled": true,
    "max_task_chars": 4000,
    "max_context_chars": 12000,
    "drop_if": [
      {
        "when": {
          "task_regex": "^(ping|test)$"
        },
        "action": "DROP",
        "rationale": "trivial"
      }
    ],
    "escalate_if": [
      {
        "when": {
          "task_regex": "(?i)password|secret|api key|mnemonic"
        },
        "tier": "HUMAN",
        "confidence": 0.95,
        "rationale": "sensitive material"
      },
      {
        "when": {
          "context_too_large": true
        },
        "tier": "REMOTE",
        "confidence": 0.85,
        "rationale": "context too large; requires integrator"
      }
    ],
    "allowlist_sources": [],
    "denylist_sources": []
  },
  "evidence": {
    "enabled": true,
    "chunk_chars": 800,
    "top_k": 5,
    "min_score": 1
  },
  "signals": {
    "force_human": [
      "delete prod data",
      "wire money",
      "send legal threat"
    ],
    "prefer_local": [
      "format",
      "rename",
      "summarize",
      "extract",
      "list",
      "grep"
    ],
    "prefer_remote": [
      "architecture",
      "threat model",
      "cryptography",
      "governance",
      "design a system"
    ]
  },
  "route_overrides": [
    {
      "match": "openai",
      "tier": "HUMAN",
      "reason": "OpenAI is HUMAN-mediated in this deployment."
    }
  ],
  "error_escalations": [
    {
      "type": "MLX_DEVICE_UNAVAILABLE",
      "tier": "REMOTE",
      "confidence": 0.9,
      "rationale": "local mlx unavailable; escalated"
    }
  ]
}
