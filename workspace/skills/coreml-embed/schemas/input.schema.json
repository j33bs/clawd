{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "workspace/skills/coreml-embed/schemas/input.schema.json",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "model_path": { "type": "string", "minLength": 1 },
    "texts": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1,
      "maxItems": 32
    },
    "max_text_chars": { "type": "integer", "minimum": 1, "maximum": 20000 },
    "compute_units": {
      "type": "string",
      "enum": ["ALL", "CPU_ONLY", "CPU_AND_GPU", "CPU_AND_NE"]
    },
    "dry_run": { "type": "boolean" }
  },
  "required": ["model_path", "texts"]
}
