[Unit]
Description=OpenClaw external watchdog (gateway crash auto-restart)
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
WorkingDirectory=%h/src/clawd
Environment=OPENCLAW_AGENT_SERVICE=openclaw-gateway.service
ExecStart=/usr/bin/env bash %h/src/clawd/workspace/scripts/agent_watchdog.sh

[Install]
WantedBy=default.target
