{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OpenClaw LLM Policy",
  "type": "object",
  "required": [
    "version",
    "defaults",
    "budgets",
    "providers",
    "routing"
  ],
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "integer",
      "enum": [
        2
      ]
    },
    "defaults": {
      "type": "object",
      "required": [
        "allowPaid",
        "preferLocal",
        "maxTokensPerRequest",
        "circuitBreaker"
      ],
      "additionalProperties": false,
      "properties": {
        "allowPaid": {
          "type": "boolean"
        },
        "preferLocal": {
          "type": "boolean"
        },
        "maxTokensPerRequest": {
          "type": "integer",
          "minimum": 1
        },
        "circuitBreaker": {
          "type": "object",
          "required": [
            "failureThreshold",
            "cooldownSec",
            "windowSec",
            "failOn"
          ],
          "additionalProperties": false,
          "properties": {
            "failureThreshold": {
              "type": "integer",
              "minimum": 1
            },
            "cooldownSec": {
              "type": "integer",
              "minimum": 1
            },
            "windowSec": {
              "type": "integer",
              "minimum": 1
            },
            "failOn": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "budgets": {
      "type": "object",
      "required": [
        "intents",
        "tiers"
      ],
      "additionalProperties": false,
      "properties": {
        "intents": {
          "type": "object",
          "minProperties": 1,
          "additionalProperties": {
            "type": "object",
            "required": [
              "dailyTokenBudget",
              "dailyCallBudget",
              "maxCallsPerRun"
            ],
            "additionalProperties": false,
            "properties": {
              "dailyTokenBudget": {
                "type": "integer",
                "minimum": 1
              },
              "dailyCallBudget": {
                "type": "integer",
                "minimum": 1
              },
              "maxCallsPerRun": {
                "type": "integer",
                "minimum": 1
              }
            }
          }
        },
        "tiers": {
          "type": "object",
          "minProperties": 1,
          "additionalProperties": {
            "type": "object",
            "required": [
              "dailyTokenBudget",
              "dailyCallBudget"
            ],
            "additionalProperties": false,
            "properties": {
              "dailyTokenBudget": {
                "type": "integer",
                "minimum": 1
              },
              "dailyCallBudget": {
                "type": "integer",
                "minimum": 1
              }
            }
          }
        }
      }
    },
    "providers": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "required": [
          "enabled",
          "paid",
          "tier",
          "type"
        ],
        "properties": {
          "enabled": {
            "type": "boolean"
          },
          "paid": {
            "type": "boolean"
          },
          "tier": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "baseUrl": {
            "type": "string"
          },
          "apiKeyEnv": {
            "type": "string"
          },
          "readyEnv": {
            "type": "string"
          },
          "auth": {
            "type": "string"
          },
          "models": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "id"
              ],
              "properties": {
                "id": {
                  "type": "string"
                },
                "maxInputChars": {
                  "type": "integer",
                  "minimum": 1
                },
                "tier": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    },
    "routing": {
      "type": "object",
      "required": [
        "free_order",
        "intents"
      ],
      "additionalProperties": false,
      "properties": {
        "free_order": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        },
        "intents": {
          "type": "object",
          "minProperties": 1,
          "additionalProperties": {
            "type": "object",
            "required": [
              "order"
            ],
            "additionalProperties": false,
            "properties": {
              "order": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string"
                }
              },
              "allowPaid": {
                "type": "boolean"
              },
              "maxTokensPerRequest": {
                "type": "integer",
                "minimum": 1
              },
              "fallback": {
                "type": "string"
              },
              "preferLocalForShort": {
                "type": "boolean"
              },
              "shortMessageChars": {
                "type": "integer",
                "minimum": 1
              }
            }
          }
        }
      }
    }
  }
}
