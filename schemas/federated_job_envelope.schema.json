{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://openclaw.local/schemas/federated_job_envelope.schema.json",
  "title": "FederatedJobEnvelope",
  "type": "object",
  "required": [
    "envelope_version",
    "job_id",
    "requester_identity",
    "policy_decision_record",
    "budgets",
    "artifacts_manifest",
    "stream",
    "cancel",
    "payload",
    "created_at",
    "signature"
  ],
  "properties": {
    "envelope_version": { "type": "string", "enum": ["v0"] },
    "job_id": { "type": "string", "minLength": 1 },
    "requester_identity": { "type": "string", "minLength": 1 },
    "policy_decision_record": { "type": "object", "additionalProperties": true },
    "budgets": { "type": "object", "additionalProperties": true },
    "artifacts_manifest": {
      "type": "array",
      "items": { "type": "object", "additionalProperties": true }
    },
    "stream": {
      "type": "object",
      "required": ["supported"],
      "properties": {
        "supported": { "type": "boolean" }
      }
    },
    "cancel": {
      "type": "object",
      "required": ["supported"],
      "properties": {
        "supported": { "type": "boolean" }
      }
    },
    "payload": { "type": "object", "additionalProperties": true },
    "created_at": { "type": "string", "format": "date-time" },
    "signature": { "type": "string", "minLength": 1 }
  },
  "additionalProperties": true
}
