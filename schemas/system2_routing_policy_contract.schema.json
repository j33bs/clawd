{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://openclaw.local/schemas/system2_routing_policy_contract.schema.json",
  "title": "System2RoutingPolicyDecision",
  "type": "object",
  "required": [
    "policy_version",
    "selected_model_route",
    "tool_allowlist_decision",
    "budget_allocation",
    "required_evidence_artifacts",
    "degrade_flags"
  ],
  "properties": {
    "policy_version": { "type": "string" },
    "selected_model_route": {
      "type": "string",
      "enum": ["OATH_CLAUDE", "ANTHROPIC_CLAUDE_API", "LITELLM_PROXY", "LOCAL_QWEN", "LOCAL_OLLAMA", "LOCAL_OPENAI_COMPAT"]
    },
    "tool_allowlist_decision": {
      "type": "object",
      "required": ["mode", "allowed_tools"],
      "properties": {
        "mode": { "type": "string", "enum": ["deny", "allow_readonly"] },
        "allowed_tools": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "budget_allocation": {
      "type": "object",
      "required": ["remaining", "cap", "max_tokens", "max_calls"],
      "properties": {
        "remaining": { "type": "number" },
        "cap": { "type": "number" },
        "max_tokens": { "type": "number" },
        "max_calls": { "type": "number" }
      }
    },
    "required_evidence_artifacts": {
      "type": "array",
      "items": { "type": "string" }
    },
    "degrade_flags": {
      "type": "object",
      "required": ["tools_disabled", "local_only", "read_only_memory", "deny_reason"],
      "properties": {
        "tools_disabled": { "type": "boolean" },
        "local_only": { "type": "boolean" },
        "read_only_memory": { "type": "boolean" },
        "deny_reason": { "type": ["string", "null"] }
      }
    }
  },
  "additionalProperties": true
}
