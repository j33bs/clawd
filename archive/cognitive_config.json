        "characteristics": ["constitutional_supremacy", "safety", "agency_preservation"],
        "constitutional_priority": 100
      }
    },
    "classification_algorithm": {
      "constitutional_compliance_check": true,
      "word_count_weight": 0.2,
      "question_words_weight": 0.25,
      "complexity_keywords_weight": 0.25,
      "directive_language_detection_weight": 0.3,
      "certainty_language_detection_weight": 0.3,
      "framework_language_detection_weight": 0.2,
      "logical_connectors_weight": 0.15,
      "negations_weight": 0.15,
      "numerical_information_weight": 0.1
