      "confidence_thresholds": {
        "high": 0.8,
        "medium": 0.6,
        "low": 0.4
      },
      "constitutional_intent_filtering": true,
      "disambiguation_enabled": true
    },
    "context_compaction": {
      "constitutional_compliance": true,
      "default_target_size": 1000,
      "min_compression_ratio": 0.3,
      "max_compression_ratio": 0.8,
      "essential_keys": [
        "current_task",
        "critical_info",
        "important_context",
        "user_preferences",
        "session_state",
        "therapeutic_context",
        "project_status",
        "time_sensitive_info",
