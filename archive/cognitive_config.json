        "characteristics": ["default_state", "constitutional_compliance", "agency_preservation"],
        "constitutional_priority": 10
      },
      "tier_2_light": {
        "name": "Light Processing",
        "complexity_threshold": 1.0,
        "processing_time_ms": 100,
        "handler": "simple_response_handler",
