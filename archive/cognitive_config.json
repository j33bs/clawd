    "epistemic_tagging": {
      "constitutional_compliance": true,
      "tag_weights": {
        "certain_fact": 0.3,
        "probable_inference": 0.5,
        "observation": 0.7,
        "assumption": 0.5,
        "hypothetical": 0.8,
        "uncertain": 0.9,
        "constitutional_principle": 1.0,
        "agency_preserving": 1.0
      },
      "default_tag": "observation",
      "automatic_tagging": true,
      "constitutional_tagging_enabled": true
    },
    "performance": {
      "constitutional_compliance_metrics": true,
      "logging_enabled": true,
      "metrics_collection": true,
      "cache_enabled": true,
      "max_cache_size": 1000,
      "response_time_optimization": false,
      "constitutional_response_timing": true,
      "resource_management": true
